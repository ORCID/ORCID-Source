    <bean id="memberV2ApiServiceImplV2_0_rc3" class="org.orcid.api.memberV2.server.MemberV2ApiServiceImplV2_0_rc3">    	
        <property name="serviceDelegator" ref="memberV2ApiServiceDelegatorRc3"/>
