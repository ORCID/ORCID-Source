    </bean>
    
    <bean id="publicWorkLastModifiedCache" class="org.orcid.core.utils.OrcidEhCacheFactoryBean">
        <property name="cacheName" value="public-work-last-modified" />
        <property name="cacheManager" ref="coreCacheManager" />
