		<property name="enabled" value="true" />
	</bean>

	<bean id="profileLastModifiedAspectReadOnly" class="org.orcid.persistence.aop.ProfileLastModifiedAspect">
		<property name="profileDao" ref="profileDaoReadOnly" />
