<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="l.mendoza" id="ADD-REDIRECT-URI-METADATA-TO-CLIENT-REDIRECT-URI" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="client_redirect_uri" columnName="redirect_uri_metadata"/>
            </not>
        </preConditions>
        <addColumn tableName="client_redirect_uri">
            <column name="redirect_uri_metadata" type="json" defaultValueComputed="'{}'::json"/>
        </addColumn>
        <sql>
            UPDATE client_redirect_uri
            SET redirect_uri_metadata = '{}'::json
            WHERE redirect_uri_metadata IS NULL;
        </sql>
    </changeSet>

    <changeSet author="l.mendoza" id="ADD-REDIRECT-URI-METADATA-TEXT-TO-CLIENT-REDIRECT-URI" dbms="hsqldb">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="client_redirect_uri" columnName="redirect_uri_metadata"/>
            </not>
        </preConditions>
        <addColumn tableName="client_redirect_uri">
            <column name="redirect_uri_metadata" type="text" defaultValue="{}"/>
        </addColumn>
        <sql>
            UPDATE client_redirect_uri
            SET redirect_uri_metadata = '{}'
            WHERE redirect_uri_metadata IS NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
