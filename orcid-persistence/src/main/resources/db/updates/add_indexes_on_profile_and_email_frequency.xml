    <changeSet id="ADD-INDEX-ON-PROFILE-DEACTIVATION-DATE" author="Angel Montenegro" dbms="postgresql" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists indexName="idx_profile_deactivation_date" />
            </not>
        </preConditions>
        <sql>CREATE INDEX CONCURRENTLY idx_profile_deactivation_date ON profile(profile_deactivation_date);</sql>
    </changeSet>

